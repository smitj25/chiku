{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES2021",
        "outDir": "dist",
        "lib": [
            "ES2021"
        ],
        "sourceMap": true,
        "rootDir": "src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true
    },
    "exclude": [
        "node_modules",
        "dist",
        ".vscode-test"
    ]
}